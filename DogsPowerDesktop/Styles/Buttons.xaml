<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:DogsPowerDesktop">

    <Style x:Key="WindowControlButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
    </Style>

    <Style x:Key="RegularButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
        <Setter Property="Foreground" Value="{StaticResource MainTextBrush}" />
        <Setter Property="Background" Value="{StaticResource MaterialDesignPaper}" />
        <Setter Property="BorderBrush" Value="{StaticResource MainTextBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />


    </Style>

</ResourceDictionary>