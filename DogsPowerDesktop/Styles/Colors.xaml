<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="MainText">#FFFFA6A6</Color> 
    <SolidColorBrush x:Key="MainTextBrush" Color="{StaticResource MainText}" />

    <Color x:Key="SecondaryGrey">#FF9FA1A1</Color>
    <SolidColorBrush x:Key="SecondaryGreyBrush" Color="{StaticResource SecondaryGrey}" />

    <Color x:Key="MainGrey">#FF4D4D4D</Color>
    <SolidColorBrush x:Key="MainGreyBrush" Color="{StaticResource MainGrey}" />

</ResourceDictionary>