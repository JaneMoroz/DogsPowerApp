<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="MediumPurple">#FF6537AB</Color>
    <SolidColorBrush x:Key="MediumPurpleBrush" Color="{StaticResource MediumPurple}" />

    <Color x:Key="LightPurple">#FF915EDE</Color>
    <SolidColorBrush x:Key="LightPurpleBrush" Color="{StaticResource LightPurple}" />

    <Color x:Key="DarkBluishPurple">#FF6500FF</Color>
    <SolidColorBrush x:Key="DarkBluishBrush" Color="{StaticResource DarkBluishPurple}" />

</ResourceDictionary>