<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="MainText">#FFFFA6A6</Color> 
    <SolidColorBrush x:Key="MainTextBrush" Color="{StaticResource MainText}" />

    <Color x:Key="SecondaryGrey">#FF9FA1A1</Color>
    <SolidColorBrush x:Key="SecondaryGreyBrush" Color="{StaticResource SecondaryGrey}" />

    <Color x:Key="MainGrey">#FF4D4D4D</Color>
    <SolidColorBrush x:Key="MainGreyBrush" Color="{StaticResource MainGrey}" />

    <Color x:Key="LightGreen">#FFD4EBE5</Color>
    <SolidColorBrush x:Key="LightGreenBrush" Color="{StaticResource LightGreen}" />

    <Color x:Key="DarkGreen">#FF80D9C2</Color>
    <SolidColorBrush x:Key="DarkGreenBrush" Color="{StaticResource DarkGreen}" />

</ResourceDictionary>